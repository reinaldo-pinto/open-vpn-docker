#!/bin/bash

USERNAME=$1

OVPN_DATA="/mnt/app/openvpn"

#Follow the steps to create another vpn client 

docker run -v $OVPN_DATA:/etc/openvpn --log-driver=none --rm -it kylemanna/openvpn easyrsa build-client-full $USERNAME 

docker run -v $OVPN_DATA:/etc/openvpn --log-driver=none --rm kylemanna/openvpn ovpn_getclient $USERNAME > $USERNAME.ovpn